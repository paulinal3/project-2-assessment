<head>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div>
        <h1>Wacky Widgets</h1>
    
            <% if (widgets.length === 0) { %>
                <h3>No Widgets Exist</h3> <hr>
            <% } else { %>
                <% widgets.forEach(widget => { %>
                    <div>
                        <h3><%= widget.dataValues.description %></h3>
                        <h3>Quantity: <%= widget.dataValues.quantity %></h3>
                        <form method="POST" action="/?_method=DELETE">
                            <input hidden type="text" name="description" value="<%= widget.dataValues.description %>">
                            <input hidden type="text" name="quantity" value="<%= widget.dataValues.quantity %>">
                            <input type="submit" value="DELETE">
                        </form>
                    </div>
                <% }) %>
            <% } %>
    </div>

    <hr>
    <div>
        <h4>Add Widget</h4>
        <form method="POST" action="/">
            <input type="text" name="description" placeholder="Widget description...">
            <input type="text" name="quantity" placeholder="Widget quantity...">
            <input type="submit" value="ADD WIDGET">
        </form>
    </div>
</body>

